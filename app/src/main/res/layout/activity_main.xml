<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/goodby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginRight="9dp"
            android:layout_gravity="fill"
            android:onClick="buttonTapped"
            android:text="goodby"
            android:backgroundTint="@color/brown1"
            android:textStyle="bold"
            android:fontFamily="serif-monospace" />

        <Button
            android:id="@+id/howareyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="0"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:text="How are you?"
            android:backgroundTint="@color/red"
            android:onClick="buttonTapped"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>

        <Button
            android:id="@+id/iamfine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="0"
            android:layout_marginRight="9dp"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:text="I am fine"
            android:backgroundTint="@color/coffee"
            android:onClick="buttonTapped"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>

        <Button
            android:id="@+id/ihateyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:text="I hate you"
            android:backgroundTint="@color/pink2"
            android:onClick="buttonTapped"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>

        <Button
            android:id="@+id/iloveyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_marginRight="9dp"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:text="I love you"
            android:backgroundTint="@color/peach"
            android:onClick="buttonTapped"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>

        <Button
            android:id="@+id/mynameis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:text="my name is..."
            android:backgroundTint="@color/brown1"
            android:onClick="buttonTapped"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>

        <Button
            android:id="@+id/nicetomeetyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_marginRight="9dp"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:text="Nice to meet &#10;you"
            android:backgroundTint="@color/pink2"
            android:onClick="buttonTapped"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>

        <Button
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:text="welcome"
            android:backgroundTint="@color/coffee"
            android:onClick="buttonTapped"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>

    </GridLayout>
</RelativeLayout>
